package com.gura.step07.users.service;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpSession;

import org.springframework.stereotype.Service;
import org.springframework.web.servlet.ModelAndView;

import com.gura.step07.users.dao.UsersDao;
import com.gura.step07.users.dto.UsersDto;

@Service
public class UsersServiceImpl implements UsersService{

	//의존 객체 주입
	private UsersDao usersDao;
	
	
	//회원가입 처리
	@Override
	public void signup(UsersDto dto) {
		
		
	}

	//사용가능한 아이디인지 여부 확인
	@Override
	public ModelAndView canUseId(String id) {
		// TODO Auto-generated method stub
		return null;
	}
	
	//로그인처리
	@Override
	public ModelAndView signin(UsersDto dto, HttpSession session) {
		//Dao를 이용해서 유효한 정보인지 확인한다.
		boolean isValid=usersDao.isValid(dto);
		ModelAndView mView=new ModelAndView();
		if(isValid){//아이디 비밀번호가 일치한 경우
			//로그인 처리를 해준다.
			session.setAttribute("id", dto.getId());
			mView.addObject("msg",dto.getId()+"님 로그인 되었습니다");
		}else{//아이디 혹은 비밀번호가 다른 경우
			mView.addObject("msg","아이디 혹은 비밀번호가 틀려요.");
		}
		return null;
	}

	//회원정보 수정 폼 처리
	@Override
	public ModelAndView updateForm(HttpSession session) {
		// TODO Auto-generated method stub
		return null;
	}

	//회원정보 수정 처리
	@Override
	public void update(UsersDto dto) {
		// TODO Auto-generated method stub
		
	}

	//회원정보 삭제 처리
	@Override
	public ModelAndView delete(HttpSession session) {
		// TODO Auto-generated method stub
		return null;
	}

}
